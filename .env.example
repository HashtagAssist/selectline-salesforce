# Server-Konfiguration
PORT=3000
NODE_ENV=development

# JWT-Konfiguration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# MongoDB-Konfiguration
MONGO_URI=mongodb://localhost:27017/erp_salesforce_middleware

# Redis-Konfiguration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600  # Cache-Zeit in Sekunden (1 Stunde)

# SelectLine ERP API-Konfiguration
ERP_API_BASE_URL=https://erp-api.example.com
ERP_API_USERNAME=erp_api_username
ERP_API_PASSWORD=erp_api_password
ERP_API_TIMEOUT=30000  # Timeout in Millisekunden (30 Sekunden)
ERP_API_MAX_RETRIES=3  # Anzahl der Wiederholungsversuche bei Fehlern

# Salesforce-Konfiguration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token
SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Logging-Konfiguration
LOG_LEVEL=info 